import java.util.*;
import java.io.*;

class Solution {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int t = in.nextInt(); // Number of queries
        
        for (int i = 0; i < t; i++) {
            int a = in.nextInt();
            int b = in.nextInt();
            int n = in.nextInt();
            
            int currentTerm = a;
            for (int j = 0; j < n; j++) {
                // Calculation: currentTerm + (2^j * b)
                // Math.pow returns a double, so we cast to int
                currentTerm += (int)(Math.pow(2, j) * b);
                
                // Print the term followed by a space
                System.out.print(currentTerm + " ");
            }
            // Move to a new line after each query series
            System.out.println();
        }
        in.close();
    }
}
